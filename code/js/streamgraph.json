{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300, "height": 200,
  "title": "Nuclear Warheads Count Streamgraph",
  "data": {
    "url": "https://raw.githubusercontent.com/lee-jian-hui/FIT3179-homework-week-10/master/data/death-rates-from-energy-production-per-twh.csv"
  },
  "transform": [
    {"calculate": "datum.Entity", "as": "Energy Type"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth", "field": "date",
      "axis": {"domain": false, "format": "%Y", "tickSize": 0}
    },
    "y": {
      "aggregate": "sum", "field": "count",
      "axis": null,
      "stack": "center"
    },
    "color": {
      "field":"series", 
      "scale":{"scheme": "category20b"}
    },
    "tooltip": [
      {"field": "Energy Type", "type": "nominal"},
      {"field": "Deaths per twh", "type": "quantitative"}
    ]
  }
}
